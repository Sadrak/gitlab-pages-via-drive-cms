# Google Drive Konfiguration
# Die ID des Google Drive Hauptordners (aus der URL ersichtlich)
GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here

# Google API-Schlüssel (für öffentliche Ordner)
GOOGLE_API_KEY=your_google_api_key_here

# Google Gemini API-Schlüssel
GEMINI_API_KEY=your_gemini_api_key_here

# GitLab Konfiguration
GITLAB_URL=https://gitlab.com
GITLAB_PROJECT_ID=your_project_id_here
GITLAB_TOKEN=your_gitlab_token_here

# Git Konfiguration
GIT_USER_NAME=Content Bot
GIT_USER_EMAIL=bot@example.com

# VitePress Pfade (relativ zum Repository-Root)
VITEPRESS_SRC_PATH=src
VITEPRESS_PUBLIC_PATH=public/assets
